__import ShaderCommon;

cbuffer PerFrameCB : register(b0)
{
    float4x4 gWorld;
    float gScale;
};

void main(float4 posL : POSITION, out float3 dir : NORMAL, out float4 posH : SV_POSITION)
{
    dir = posL.xyz;
    float4 viewPos = mul(mul(posL, gWorld), gCamera.viewMat);
    posH = mul(viewPos, gCamera.projMat);
    posH.xy *= gScale;
    posH.z = posH.w;

