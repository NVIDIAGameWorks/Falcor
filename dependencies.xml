            packageLocation="github.com/shader-slang/slang/releases/download/v${version}/slang-${version}-linux-x86_64.zip"/>
    <dependency name="openvr" linkPath="Framework/Externals/OpenVR">
        <package name="openvr" version="1.0.8" platforms="win"/>
        <package name="openvr" version="1.0.8-linux" platforms="linux"/>
    </dependency>
    <dependency name="assimp" linkPath="Framework/Externals/ASSIMP">
        <package name="assimp" version="4.0.1" platforms="win" />
    </dependency>
    <dependency name="dear_imgui" linkPath="Framework/Externals/dear_imgui">
        <package name="dear_imgui" version="1.50.wip" />
    </dependency>
    <dependency name="glm" linkPath="Framework/Externals/GLM">
        <package name="glm" version="0.9.8.4" />
    </dependency>
    <dependency name="ffmpeg" linkPath="Framework/Externals/FFMPEG">
        <package name="ffmpeg" version="3.1.4" platforms="win" />
    </dependency>
    <dependency name="freeimage" linkPath="Framework/Externals/FreeImage">
        <package name="freeimage" version="3.17.0" platforms="win" />
    </dependency>
    <dependency name="vulkansdk" linkPath="Framework/Externals/VulkanSDK">
        <package name="vulkansdk" version="1.0.51.0" platforms="win"/>
    </dependency>
    <dependency name="rapidjson" linkPath="Framework/Externals/RapidJson">
        <package name="rapidjson" version="0.1" />
    </dependency>
    <dependency name="slang" linkPath="Framework/Externals/Slang">
        <package name="slang" version="0.9.5" remotes="github-slang" />
        <package name="slang" version="0.9.5" remotes="github-slang-linux" platforms="linux" />
    </dependency>
    <dependency name="glfw" linkPath="Framework/Externals/GLFW">
        <package name="glfw" version="3.2.1" platforms="win" />
    </dependency>
    <dependency name="falcor_media" linkPath="Media">
        <package name="falcor_media" version="1.0" />
    </dependency>
</project>
